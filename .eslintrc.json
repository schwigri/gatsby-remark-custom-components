{
	"env": {
		"browser": true,
		"es6": true,
		"jest": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended"
	],
	"ignorePatterns": ["node_modules", "public"],
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint", "react"],
	"rules": {
		"sort-imports": "error"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
